{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM"
    ],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/": [
        "src/*"
      ],
      "@assets/": [
        "src/assets/*"
      ],
      "@styles/": [
        "src/styles/*"
      ],
      "@scripts/": [
        "src/scripts/*"
      ]
    }
  }
}